{# templates/admin/dashboard.html.twig #}
{% extends '@EasyAdmin/page/content.html.twig' %}

{% block content_title %}Statystyki Serwisu{% endblock %}

{% block main %}
<div class="container-fluid">
    <div class="row">

        <div class="col-md-3">
            <div class="card mb-4 shadow-sm border-start border-4 border-primary">
                <div class="card-body text-center">
                    <h3 class="text-primary"><i class="fas fa-users"></i></h3>
                    <div class="fs-4 fw-bold">{{ users_count }}</div>
                    <div class="text-muted small">Użytkowników</div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card mb-4 shadow-sm border-start border-4 border-success">
                <div class="card-body text-center">
                    <h3 class="text-success"><i class="fas fa-utensils"></i></h3>
                    <div class="fs-4 fw-bold">{{ recipes_count }}</div>
                    <div class="text-muted small">Przepisów</div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card mb-4 shadow-sm border-start border-4 border-info">
                <div class="card-body text-center">
                    <h3 class="text-info"><i class="fas fa-tags"></i></h3>
                    <div class="fs-4 fw-bold">{{ categories_count }}</div>
                    <div class="text-muted small">Kategorii</div>
                </div>
            </div>
        </div>

        <div class="col-md-3">
            <div class="card mb-4 shadow-sm border-start border-4 border-warning">
                <div class="card-body text-center">
                    <h3 class="text-warning"><i class="fas fa-comments"></i></h3>
                    <div class="fs-4 fw-bold">{{ comments_count }}</div>
                    <div class="text-muted small">Komentarzy</div>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
