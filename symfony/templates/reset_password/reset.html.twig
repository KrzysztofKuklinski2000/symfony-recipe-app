{% extends 'auth_base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    <h1 class="text-xl font-bold text-center text-gray-700">Reset your password</h1>

    {{ form_start(resetForm, {'attr': {'class': 'space-y-4', 'data-turbo': 'false' }}) }}
        {{ form_row(resetForm.plainPassword, {
                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                'attr': {
                    'class': 'w-full mb-2 p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 hover:cursor-pointer',
                    }
                })
        }}
        <button
            class="flex gap-1 mt-5 bg-blue-500 p-2 text-white rounded font-bold hover:cursor-pointer hover:bg-blue-600 ">Reset
            password</button>
    {{ form_end(resetForm) }}
{% endblock %}
