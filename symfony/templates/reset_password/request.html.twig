{% extends 'auth_base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <h1 class="text-xl font-bold text-center text-gray-700">Reset your password</h1>

    {{ form_start(requestForm, {'attr': {'class': 'space-y-4', 'data-turbo': 'false' }}) }}
        {{ form_row(requestForm.email, {
            'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
            'attr': {
                'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 ',
                }
            })
        }}
        <div>
            <small>
                <i class="text-gray-700">Enter your email address, and we will send you a
                    link to reset your password.</i>
            </small>
        </div>

        <button
            class="flex gap-1 mt-5 bg-blue-500 p-2 text-white rounded font-bold hover:cursor-pointer hover:bg-blue-600 ">Send
            password reset email</button>
    {{ form_end(requestForm) }}
{% endblock %}
