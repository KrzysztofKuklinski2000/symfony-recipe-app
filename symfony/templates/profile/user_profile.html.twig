{% extends 'base.html.twig' %}

{% import '_macros/icons.html.twig' as icons %}

{% block title %}Profil {{user.email}}{% endblock %}

{% block body %}
    <div class="flex flex-col items-center justify-center pt-4">
        {% if user.imageFilename %}
            <img class="w-32 h-32 rounded-full object-cover shadow cursor-pointer"
                src="{{ asset('/uploads/users/'~ user.imageFilename) }}" alt="Zdjęcie użytkownika">
        {% else %}
            <img class="w-32 h-32 rounded-full object-cover shadow cursor-pointer"
                src="{{ asset('/uploads/users/default.jpg') }}" alt="Zdjęcie użytkownika">
        {% endif %}

        <div class="flex gap-2 items-center p-1 mt-2">
            <h1 class="font-bold text-2xl">
                {% include "_partials/_username.html.twig" with {
                    "user": user
                } %}
            </h1>

            <div>
                {% if app.user and app.user == user and is_granted('IS_EMAIL_VERIFIED')%}
                    <a href="{{ path('app_account_edit') }}"
                        class="bg-[#222831] text-white p-2 font-semibold shadow rounded cursor-pointer">
                            Edytuj profil
                    </a>
                {% endif %}
            </div>

            <div id="follow-button">
                {% include "follow/_btn.html.twig" with {
                    "user": user
                } %}
            </div>
        </div>

        <div class="flex gap-4 text-[#222831]">
            <span>
                <strong>
                    {{ user.following.count }}
                </strong> Obserwowanych
            </span>

            <span>
                <strong id="followers-counter">
                    {{ user.followers.count }}
                </strong> Obserwujących
            </span>
        </div>
    </div>

    <div class="mt-16">
        <h1 class="font-bold text-2xl px-4 pt-4">
        Przepisy użytkownika
        {% include "_partials/_username.html.twig" with {
                "user": user
            } %}:
        </h1>

        <div class="flex gap-4 justify-center items-center">
            {% if app.user and app.user == user and is_granted('IS_EMAIL_VERIFIED')%}
                <a href="{{ path('app_recipe_new') }}" class="bg-indigo-50 p-8 rounded ml-4 shadow hover:bg-indigo-100 transition flex flex-col justify-center items-center text-indigo-600 font-semibold">
                    {{ icons.add() }}
                </a>
            {% endif %}
            {% include "recipe/_list.html.twig" with {
                "recipes": user.recipes
            } %}
        </div>
    </div>
{% endblock %}
