{% extends 'auth_base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
{% for flash_error in app.flashes('verify_email_error') %}
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
        {{ flash_error }}
    </div>
    {% endfor %}
    <h1 class="text-3xl font-bold text-center text-gray-700">Stwórz Nowe Konto</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm, {'attr': {'class': 'space-y-4'}}) }}

    {{ form_row(registrationForm.email, {
                'label': 'Email: ',
                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                'attr': {
                    'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500',
                    'placeholder': 'example@gmail.com',
                    }
                })
            }}

    {{ form_row(registrationForm.plainPassword, {
                'label': 'Hasło: ',
                'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
                'attr': {
                    'class': 'w-full p-2 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500',
                    }
                })
            }}

    {{ form_row(registrationForm.agreeTerms, {
                'label': 'Zgadzam się z warunkami ',
                'label_attr': {'class': 'text-sm text-gray-700 font-medium'},
                'attr': {
                    'class': 'h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500',
                    }
                })
            }}

    <button type="submit"
        class="p-2 rounded-lg bg-blue-600 text-white hover:bg-blue-700 hover:cursor-pointer font-semibold">Zarejestruj
        się</button>
    {{ form_end(registrationForm) }}

    <div class="text-center pt-2">
        <p class="text-sm text-gray-700">
            Masz już konto?
            <a href="{{ path('app_login') }}" class="font-semibold text-blue-600 hover:underline">Zaloguj się</a>
        </p>
    </div>
{% endblock %}

