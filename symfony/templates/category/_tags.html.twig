<div class="mb-6">
    <h2 class="font-bold text-lg text-gray-800 mb-3">Kategorie</h2>
    <ul class="flex flex-wrap gap-2 text-sm">
        {% for category in categories %}
            <li>
                <a href="{{ path('app_home_category', {'slug': category.slug}) }}"
                    class="inline-block px-3 py-1 bg-gray-100 text-gray-700 rounded-full hover:bg-gray-200 hover:text-black transition-colors duration-200 font-medium">
                    {{ category.name|capitalize }}
                </a>
            </li>
        {% else %}
            <li class="text-gray-500 italic text-sm">Brak dostÄ™pnych kategorii</li>
        {% endfor %}
    </ul>
</div>
