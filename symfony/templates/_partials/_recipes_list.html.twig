{% import '_macros/icons.html.twig' as icons %}
<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 p-4" id="recipes-grid-container">
    {% for recipe in recipes %}
        {% include "_partials/_recipe_card.html.twig" with {
            "recipe": recipe,
            "is_favorite_page": is_favorite_page ?? false
        } %}
    {% else %}
        <div class="col-span-full text-center py-16">
            <p class="text-gray-600 italic">Nie znaleziono żadnych przepisów</p>
        </div>
    {% endfor %}
</div>
