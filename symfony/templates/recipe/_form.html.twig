        }
    })
}}

{{ form_row(form.dietaryTags, {
    'label_attr': {'class': 'block text-sm font-medium text-gray-700 mb-1'},
    'attr': {
        'class': 'flex gap-2 p-2 w-full border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 ',
        }
    })
