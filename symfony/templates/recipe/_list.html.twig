{% import '_macros/icons.html.twig' as icons %}

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6" id="recipes-grid-container">
    {% for recipe in recipes %}
        {% include "recipe/_card.html.twig" with {
                "recipe": recipe,
                "is_favorite_page": is_favorite_page ?? false
            } %}
    {% else %}
        <div class="col-span-full flex flex-col items-center justify-center py-20 text-center">
            <div class="bg-gray-50 p-6 rounded-full mb-4">
                <span class="text-gray-300 block transform scale-150">
                    {{ icons.list(12) }}
                </span>
            </div>
            <h3 class="text-xl font-bold text-gray-700 mb-2">Brak przepisów</h3>
            <p class="text-gray-500 max-w-sm mx-auto">
                Nie znaleziono żadnych przepisów spełniających kryteria lub lista jest pusta.
            </p>
        </div>
    {% endfor %}
</div>
